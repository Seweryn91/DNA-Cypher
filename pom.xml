    <profiles>
        <profile>
            <id>desktop</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <exec.mainClass>com.Seweryn91.app.Main</exec.mainClass>
            </properties>
        </profile>
